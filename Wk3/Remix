


//REVISION

void setup(){
  size (500,500); 
  background (0); 
} 

void draw(){
  if (mousePressed){
    fill(255); 
    noStroke(); 
  stroke(255); 
  line (mouseX,mouseY,250,250); 
  stroke (0); 
  fill(255,0,0); 
  }
  if (mousePressed)
  rect(mouseX,mouseY,25,10); 
  fill(255); 
  noStroke(); 
  }
